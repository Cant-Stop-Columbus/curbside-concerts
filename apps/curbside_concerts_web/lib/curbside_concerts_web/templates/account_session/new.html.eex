<div class="card">

  <h1>Sign In</h1>

  <%= form_for @conn, Routes.account_session_path(@conn, :new), [as: :session], fn f -> %>
  <label class="field">
    <%= text_input f, :username, placeholder: "username" %>
    <%= error_tag f, :username %>
  </label>

  <label class="field">
    <%= password_input f, :password, placeholder: "password" %>
    <%= error_tag f, :password %>
  </label>

  <%= submit "Sign In" %>
<% end %>

</div>
